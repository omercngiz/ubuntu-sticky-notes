<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="AdwApplicationWindow" id="StickyWindow">
    <property name="default-width">320</property>
    <property name="default-height">240</property>
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="headerbar">
            <child type="start">
              <object class="GtkButton" id="btn_pin">
                <property name="icon-name">window-pin-symbolic</property>
                <property name="tooltip-text">Pin on Top</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="btn_close">
                <property name="icon-name">window-close-symbolic</property>
                <property name="tooltip-text">Close</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow" id="scrolled">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <child>
              <object class="GtkTextView" id="text_view">
                <property name="wrap-mode">word-char</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
